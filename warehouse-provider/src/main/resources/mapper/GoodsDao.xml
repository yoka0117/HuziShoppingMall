<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
 namespace：必须有值，自定义的唯一字符串
 推荐使用：dao 接口的全限定名称
-->
<mapper namespace="com.huzi.warehouseprovider.dao.OrderManagementDao">
    <!--
    <select>: 查询数据， 标签中必须是 select 语句
    id: sql 语句的自定义名称，推荐使用 dao 接口中方法名称，
    使用名称表示要执行的 sql 语句
    resultType: 查询语句的返回结果数据类型，使用全限定类名
    -->
<resultMap id="orderManagementMap" type="com.huzi.warehouseprovider.domain.OrderManagement">
    <id column="order_management_id" property="orderManagementId"/>
    <result column="order_id" property="orderId"/>
    <result column="order_state" property="orderState"/>
    <result column="creation_time" property="creationTime"/>
</resultMap>







    <!--//order订单预订成功后，推送至仓库，记录-->
    <insert id="insertOrderManagement" parameterType="com.huzi.warehouseprovider.domain.OrderManagement" >
        insert into t_order_management(order_id,order_state,creation_time)
        values(#{orderId},#{orderState},#{creationTime})
    </insert>

    <!--//捞出指定状态的订单-->
    <select id="selectOrderByState" parameterType="java.lang.String" resultMap="orderManagementMap">
        select * from t_order_management where order_state = #{orderState}
    </select>


    <!--改变订单状态-->
    <update id="updateOrderManagementState" parameterType="com.huzi.warehouseprovider.domain.OrderManagement">
        update t_order_management set order_state = #{orderState} where order_id = #{orderId}
    </update>




</mapper>